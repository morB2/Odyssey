{
  "api": "Geoapify Places API",
  "version": "v2",
  "base_url": "https://api.geoapify.com/v2/places",
  "description": "API to search for places based on categories, location, and conditions. AI-friendly format for generating requests.",
  "authentication": {
    "type": "apiKey",
    "name": "apiKey",
    "required": true,
    "example": "apiKey=YOUR_API_KEY"
  },
  "endpoints": [
    {
      "path": "/v2/places",
      "method": "GET",
      "description": "Search for places using categories, spatial filters, bias, and optional conditions.",
      "parameters": [
        {
          "name": "categories",
          "type": "string",
          "required": true,
          "description": "Primary place categories. See supported categories.",
          "example": "categories=commercial.supermarket"
        },
        {
          "name": "conditions",
          "type": "string",
          "required": false,
          "description": "Additional filters such as accessibility or amenities. See supported conditions.",
          "example": "conditions=wheelchair.yes"
        },
        {
          "name": "filter",
          "type": "string",
          "required": false,
          "description": "Spatial filters that constrain the search area (circle, rectangle, geometry, place, country).",
          "example": "filter=rect:-89.1,39.66,-88.39,40.38"
        },
        {
          "name": "bias",
          "type": "string",
          "required": false,
          "description": "Prioritizes results near a location without excluding others (proximity, circle, rectangle).",
          "example": "bias=proximity:-73.99,40.77"
        },
        {
          "name": "limit",
          "type": "integer",
          "required": false,
          "description": "Maximum number of results per page.",
          "example": 20
        },
        {
          "name": "offset",
          "type": "integer",
          "required": false,
          "description": "Start index for pagination (use with limit).",
          "example": 40
        },
        {
          "name": "lang",
          "type": "string",
          "required": false,
          "description": "Response language as an ISO 639-1 code.",
          "example": "lang=en"
        },
        {
          "name": "name",
          "type": "string",
          "required": false,
          "description": "Returns places matching a given name.",
          "example": "name=Starbucks"
        }
      ],
      "notes": "At least one spatial control—either filter or bias—must be added to determine search area.",
      "supported_categories": [
        "accommodation.hotel",
        "accommodation.guest_house",
        "accommodation.motel",
        "catering.cafe",
        "catering.fast_food",
        "catering.restaurant",
        "entertainment.activity_park",
        "entertainment.activity_park.climbing",
        "entertainment.activity_park.trampoline",
        "entertainment.amusement_arcade",
        "entertainment.aquarium",
        "entertainment.bowling_alley",
        "entertainment.cinema",
        "entertainment.culture",
        "entertainment.culture.arts_centre",
        "entertainment.culture.gallery",
        "entertainment.culture.theatre",
        "entertainment.escape_game",
        "entertainment.flying_fox",
        "entertainment.miniature_golf",
        "entertainment.museum",
        "entertainment.planetarium",
        "entertainment.theme_park",
        "entertainment.water_park",
        "entertainment.zoo",
        "leisure.park",
        "leisure.park.garden",
        "leisure.park.nature_reserve",
        "natural",
        "natural.forest",
        "natural.sand",
        "natural.sand.dune",
        "natural.water",
        "natural.water.geyser",
        "natural.water.hot_spring",
        "natural.water.reef",
        "natural.water.sea",
        "natural.water.spring",
        "national_park",
        "natural.mountain",
        "natural.mountain.cave_entrance",
        "natural.mountain.cliff",
        "natural.mountain.glacier",
        "natural.mountain.peak",
        "natural.mountain.rock",
        "tourism.sights.ruines",
        "tourism.sights.archaeological_site",
        "tourism.sights.battlefield",
        "tourism.sights.bridge",
        "tourism.sights.castle",
        "tourism.sights.city_gate",
        "tourism.sights.city_hall",
        "tourism.sights.conference_centre",
        "tourism.sights.fort",
        "tourism.sights.lighthouse",
        "tourism.attraction.artwork",
        "tourism.attraction.clock",
        "tourism.attraction.fountain",
        "tourism.attraction.viewpoint",
        "camping.camp_pitch",
        "camping.camp_site",
        "camping.caravan_site",
        "camping.summer_camp",
        "beach",
        "beach.beach_resort",
        "ski.lift",
        "ski.lift.cable_car",
        "ski.lift.chair_lift",
        "ski.lift.gondola",
        "ski.lift.magic_carpet",
        "ski.lift.mixed_lift",
        "ski.lift.tow_line"
      ],
      "supported_conditions": [
        "internet_access",
        "internet_access.free",
        "internet_access.for_customers",
        "access.yes",
        "access.not_specified",
        "wheelchair",
        "wheelchair.yes",
        "wheelchair.limited",
        "fee",
        "no_fee",
        "no_fee.no",
        "no_fee.not_specified",
        "named",
        "halal",
        "halal.only",
        "kosher",
        "kosher.only",
        "gluten_free",
        "sugar_free",
        "egg_free",
        "soy_free"
      ],
      "supported_filters": [
        "circle:lon,lat,radiusMeters",
        "rect:lon1,lat1,lon2,lat2",
        "geometry:geometryId",
        "place:placeId",
        "countrycode:code1,code2"
      ],
      "supported_bias": [
        "proximity:lon,lat",
        "circle:lon,lat,radiusMeters",
        "rect:lon1,lat1,lon2,lat2"
      ]
    }
  ]
}
